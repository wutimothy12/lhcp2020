@model Cart

    
        @if (Model.Lines.Count() > 0)
        {
            <small>
                <b>Your cart:</b>
                @Model.Lines.Sum(x => x.Quantity) item(s)
                @Model.ComputeTotalValue().ToString("c")
            </small>
            <a class="scart" asp-controller="Cart" asp-action="Index"
               asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
                <i class="fa fa-shopping-cart"></i>
            </a>
        }
        else
        {
            <a class="scart" asp-controller="Cart" asp-action="Index"
               asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">Shoping Cart <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
        }
   